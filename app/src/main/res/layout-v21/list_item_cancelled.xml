<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_tagged"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/layout_travelling_with"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_corner">


        <com.arriwe.utility.RoundedImageView
            android:id="@+id/imageView_tagged"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round" />

        <TextView
            android:id="@+id/textView_tagged_cancel"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imageView_tagged"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:maxWidth="250dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black_text"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_started_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/imageView9"
            android:layout_marginEnd="36dp"
            android:layout_marginLeft="2dp"
            android:layout_toStartOf="@+id/imageView9"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignEnd="@+id/linearLayout13"
            android:layout_below="@+id/linearLayout13"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/cross" />

        <TextView
            android:id="@+id/textView_travelling_loc"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/textView_tagged_cancel"
            android:layout_below="@+id/textView_tagged_cancel"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black_text"
            android:textSize="12sp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView_tagged"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/vpi__background_holo_light"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignStart="@+id/imageView_tagged"
            android:layout_alignTop="@+id/linearLayout13"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/cancelled_activity" />


    </RelativeLayout>
</LinearLayout>